<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:id="@+id/search_movie_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/search_movie_card"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:clipToPadding="true"
                android:translationZ="2dp"
                app:cardCornerRadius="5dp">

                <ImageView
                    android:id="@+id/search_movie_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/interps"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/search_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/liberationserif_regular"
                android:maxLines="3"
                android:layout_toEndOf="@+id/search_movie_card"
                android:layout_marginStart="20dp"
                android:text="@string/manhattan_new_york_usa"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/search_movie_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_movie_title"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/search_movie_card"
                android:fontFamily="@font/liberationserif_regular"
                android:maxLines="3"
                android:text="@string/no_data"
                android:textColor="@color/lightblack"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>